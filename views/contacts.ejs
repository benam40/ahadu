<% layout('layout', { title: 'Contacts' }) %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Contacts</h2>
  <a href="/contacts/new" class="btn btn-success">Add Contact</a>
</div>
<table class="table table-striped table-hover">
  <thead class="table-primary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (contacts.length === 0) { %>
      <tr><td colspan="4" class="text-center">No contacts found.</td></tr>
    <% } %>
    <% contacts.forEach(function(contact, idx) { %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td>
          <a href="/contacts/<%= idx %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
          <form action="/contacts/<%= idx %>?_method=DELETE" method="POST" style="display:inline-block">
            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
